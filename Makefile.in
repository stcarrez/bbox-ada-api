## The type of library we want to build. Possible values:
##   relocatable
##   static
BBOX_LIBRARY_TYPE=static

# You may edit this makefile as long as you keep these original 
# target names defined.
MODE=debug
GNATMAKE=@GNATMAKE@
GNATCLEAN=gnatclean
GPRINSTALL=@GPRINSTALL@
INSTALL=@INSTALL@
DYNAMO=dynamo

GPRPATH=bbox.gpr

BUILDS_SHARED=@BUILDS_SHARED@

version=@BBOX_VERSION@

distdir=ada-bbox-@BBOX_VERSION@

DIST_FILE=ada-bbox-@BBOX_VERSION@.tar.gz

LN_S=@LN_S@
MKDIR=mkdir
CP=cp
LN=ln -s

ifeq (${OS},Windows_NT)
LIBEXT=dll
LIBVER=dll
else
LIBEXT=so
LIBVER=so.$(version)
endif

srcdir = .
top_srcdir = @top_srcdir@
VPATH = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
top_builddir = .

# share/ada/adainclude
infix_inc=@ADA_INC_BASE@

# share/ada/adainclude
infix_prj=@ADA_PRJ_BASE@

# lib
infix_lib=@ADA_LIB_BASE@

# lib/ada/adalib
infix_ali=@ADA_ALI_BASE@

includedir=${prefix}/${infix_inc}
projectdir=${prefix}/${infix_prj}
bindir=${prefix}/bin
libdir=${prefix}/${infix_lib}
alidir=${prefix}/${infix_ali}

libname=libada_bbox

PROCESSORS=@NR_CPUS@
MAKE_ARGS=-XMODE=${MODE} -XBBOX_LIBRARY_TYPE=${BBOX_LIBRARY_TYPE} -XPROCESSORS=${PROCESSORS}
ifeq ($(BBOX_LIBRARY_TYPE),relocatable)
MAKE_ARGS += -XUTIL_BUILD=relocatable -XUTIL_LIBRARY_TYPE=relocatable
MAKE_ARGS += -XXMLADA_BUILD=relocatable
MAKE_ARGS += -XLIBRARY_TYPE=relocatable
endif

ifeq (${BUILDS_SHARED},yes)
all:     static shared tools
install: install_static install_shared install-info
else
all:     static tools
install: install_static install-info
endif

# Build executables for all mains defined by the project.
build: setup
	$(GNATMAKE) -p -P"$(GPRPATH)" $(MAKE_ARGS)

static:
	$(MAKE) BBOX_LIBRARY_TYPE=static build

shared:
	$(MAKE) BBOX_LIBRARY_TYPE=relocatable build

setup: obj/bbox/static lib/bbox/static

obj/bbox/static lib/bbox/static:
	$(MKDIR) -p $@

tools:
	$(GNATMAKE) -p -Pbbox_tools $(MAKE_ARGS)

# Not intended for manual invocation.
# Invoked if automatic builds are enabled.
# Analyzes only on those sources that have changed.
# Does not build executables.
autobuild:
	$(GNATMAKE) $(MAKE_ARGS) -gnatc -c -k  -P "$(GPRPATH)"

# Clean the root project of all build products.
clean:
	-rm -f lib obj bin

# Clean root project and all imported projects too.
clean_tree:
	$(GNATCLEAN) -q -P "$(GPRPATH)" -r

# Check *all* sources for errors, even those not changed.
# Does not build executables.
analyze:
	$(GNATMAKE) $(MAKE_ARGS) -f  -gnatc -c -k  -P "$(GPRPATH)"

# Clean, then build executables for all mains defined by the project.
rebuild: clean build

# Build and run the unit tests
check test:	build
	$(GNATMAKE) $(MAKE_ARGS) -p -Pbbox_tests
	bin/bbox_harness -xml bbox-aunit.xml

doc:
	$(DYNAMO) build-doc -markdown wiki

# Files to package in source distribution
DISTFILES=README.md LICENSE.txt NOTICE.txt NEWS config.guess configure config.sub \
configure.in Makefile.in install-sh aclocal.m4 \
bbox.gpr.in bbox_tools.gpr.in bbox_tests.gpr.in config.gpr \
src config regtests tools \
bin obj lib distrib

dist:
	-rm -rf $(distdir)
	mkdir $(distdir)
	-chmod 777 $(distdir)
	here=`cd $(top_builddir) && pwd`; \
	top_distdir=`cd $(distdir) && pwd`; \
	distdir=`cd $(distdir) && pwd`; \
	for file in $(DISTFILES); do \
	  d=$(srcdir); \
	  if test -d $$d/$$file; then \
	    cp -pr $$d/$$file $(distdir)/$$file; \
	  else \
	    test -f $(distdir)/$$file \
	    || ln $$d/$$file $(distdir)/$$file 2> /dev/null \
	    || cp -p $$d/$$file $(distdir)/$$file || :; \
	  fi; \
	done
	-rm -f $(distdir)/bin/*
	-rm -rf $(distdir)/obj/*
	-rm -rf $(distdir)/lib/*
	-rm -rf $(distdir)/regtests/result
	tar --exclude=.svn --exclude="*~" --exclude="*.o" --exclude="*.ali" \
	    --exclude="*.log" --exclude="*.a" \
	    -cvzf $(DIST_FILE) $(distdir)

install_static:
	$(MAKE) BBOX_LIBRARY_TYPE=static install_lib

install_shared:
	$(MAKE) BBOX_LIBRARY_TYPE=relocatable install_lib

install_lib:
ifneq (${GPRINSTALL},)
	$(GPRINSTALL) -p -f --prefix=${prefix} $(MAKE_ARGS) \
		--build-name=$(BBOX_LIBRARY_TYPE) $(GPRPATH)
else
	$(MKDIR) -p ${includedir}/ada-bbox
	$(MKDIR) -p ${projectdir}/ ${bindir}/
	${MKDIR} -p ${alidir}/ada-bbox
	${CP} -p src/*.ad[bs] ${includedir}/ada-bbox
	sed -e "s,LIBRARY_TYPE,$(BBOX_LIBRARY_TYPE),g" < distrib/bbox.gpr > ${projectdir}/bbox.gpr
	${CP} -p lib/bbox/$(BBOX_LIBRARY_TYPE)/*.ali ${alidir}/ada-bbox/
ifeq ($(BBOX_LIBRARY_TYPE),static)
	${CP} lib/bbox/$(BBOX_LIBRARY_TYPE)/$(libname).a ${libdir}/
else
	${CP} -p lib/bbox/$(BBOX_LIBRARY_TYPE)/$(libname).$(LIBVER) ${libdir}/
ifneq (${OS},Windows_NT)
	cd ${libdir} && \
	   rm -f $(libname).$(LIBEXT) && \
	   ${LN} $(libname).$(LIBVER) $(libname).$(LIBEXT)
else
	${CP} -p lib/bbox/$(BBOX_LIBRARY_TYPE)/$(libname).$(LIBVER) ${bindir}/
endif
endif
endif

install-info:
ifeq (${GPRINSTALL},)
	@echo "Installation directories:"
	@echo "  Ada source files:    ${includedir}"
	@echo "  ALI files:           ${alidir}"
	@echo "  Libraries:           ${libdir}"
	@echo "  GNAT project:        ${projectdir}"
else
	@echo "Environment setup:"
	@echo "  export ADA_PROJECT_PATH=${projectdir}:$$ADA_PROJECT_PATH"
endif

uninstall:
ifneq (${GPRINSTALL},)
	-$(GPRINSTALL) -q -f --prefix=${prefix} $(MAKE_ARGS) --uninstall $(GPRPATH)
else
	rm -rf ${includedir}/ada-bbox ${alidir}/ada-bbox
	rm -f ${libdir}/$(libname).a
	rm -f ${libdir}/$(libname).$(LIBEXT)
	rm -f ${projectdir}/bbox.gpr
endif

.PHONY: tools
